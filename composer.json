{
  "name": "svgaman/mysql-pdo-secure-session-handler",
  "version": "1.5.0",
  "license": "MIT",
  "type": "library",
  "description": "Mysql secure session handler with openssl encryption of session data and 'per session' based lifetime.",
  "keywords": [
    "php",
    "mysql",
    "session",
    "secure",
    "pdo",
    "session handler",
    "encryption",
    "encrypted",
    "session data",
    "openssl"
  ],
  "homepage": "https://github.com/svgaman/mysql-pdo-secure-session-handler",
  "authors": [
    {
      "name": "Ante Drnasin",
      "email": "ante.drnasin@gmail.com",
      "homepage": "http://www.drnasin.com"
    }
  ],
  "require": {
    "php": ">=7.1.2",
    "ext-openssl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
      "Drnasin\\": "src/Drnasin"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Drnasin\\": "tests/src/Drnasin"
    }
  },
  "scripts": {
    "tests": "phpunit -c tests/phpunit.xml",
    "gen-key-file": "openssl rand -base64 -out ./storage/enc.key 160"
  }
}
